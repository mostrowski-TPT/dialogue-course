<div class="component-inner dialogue-inner">
    {{> component this}}
    <div class="component-widget dialogue-widget">
        <div class="dialogue-container">
            {{#each _items}}
            <div class="current-dialogue item-{{@index}} {{{id}}}" dialogueID="{{{id}}}">
                <div class="dialogue-content-body">
                    <div class="dialogue-content-body-inner">
                        {{#if _graphic.src}}
                        <div class="dialogue-item-graphic">
                            <img src="{{{_graphic.src}}}" alt="{{{_graphic.alt}}}">
                        </div>
                        {{/if}} {{#if _video.src}}
                        <div class="dialogue-item-video">
                            <video {{#if _video.controls}} controls {{/if}} {{#if _video.autoplay}} autoplay {{/if}} {{#if _video.loop}} loop {{/if}} src="{{{_video.src}}}" alt="{{{_video.alt}}}">
                        </div>
                        {{/if}}
                      {{#if header_text}}   <div class="dialogue-content-title-inner" role="heading">
                    {{{header_text}}}
                </div>
                       {{/if}}
                        {{#if body}}
                        {{{body}}}
                        {{/if}}
                    </div>
                </div>
               {{#if options}}
                {{#each options}}
                <div>
                    <button optionlink="{{{option_link}}}" class="optionbutton" {{#if finisher}}finisher="true"{{/if}}>{{{option_text}}}</button>
                </div>
                {{/each}}
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>
